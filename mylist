  <script>
  // Step 1: Find the element we want the event on
  var button = document.getElementById("button");
  // Step 2: Define the event listener function
     
  var onButtonClick = function() {
   var fieldValue = document.getElementById('textfield').value;
localStorage.setItem('text', fieldValue);
	  var fieldValue1 = document.getElementById('textfield1').value;
localStorage.setItem('text1', fieldValue1);
var fieldValue2 = document.getElementById('textfield2').value;
localStorage.setItem('text2', fieldValue2);
var fieldValue3 = document.getElementById('textfield3').value;
localStorage.setItem('text3', fieldValue3);

	 
	         var greeting = "Hello, " + fieldValue;
    document.getElementById("message").textContent = greeting + "  You would like to buy:  ";


	var greeting1 = "For you Eyes:  " + fieldValue1;
    document.getElementById("message1").textContent = greeting1;
	var greeting2 = "For your Lips:  " + fieldValue2;
    document.getElementById("message2").textContent = greeting2;
	var greeting3 = "For your Skin:  " + fieldValue3;
    document.getElementById("message3").textContent = greeting3;
	
  };
  function removed()
  {
	  document.getElementById('textfield').value ='';
	  localStorage.removeItem('text');
var greeting = " " ;
    document.getElementById("message").textContent = greeting;
	//2
	document.getElementById('textfield1').value ='';
	  localStorage.removeItem('text1');
var greeting1 = " " ;
    document.getElementById("message1").textContent = greeting1;
	//3
	document.getElementById('textfield2').value ='';
	  localStorage.removeItem('text2');
var greeting2 = " " ;
    document.getElementById("message2").textContent = greeting2;
	//4
	document.getElementById('textfield3').value ='';
	  localStorage.removeItem('text3');
var greeting3 = " " ;
    document.getElementById("message3").textContent = greeting3;
	
  }
  
   function load()
  {
	  var storedValue = localStorage.getItem('text');
	  var storedValue1 = localStorage.getItem('text1');
	  var storedValue2 = localStorage.getItem('text2');
	  var storedValue3 = localStorage.getItem('text3');
	  
	
		  document.getElementById('textfield').value = storedValue;
		  document.getElementById('textfield1').value = storedValue1;
		  document.getElementById('textfield2').value = storedValue2;
		  document.getElementById('textfield3').value = storedValue3;
if(storedValue)
	  {
		   var greeting = "Hello, " + storedValue;
    document.getElementById("message").textContent = greeting + "  You would like to buy:  ";
	  }
	  if(storedValue1){

	var greeting1 = "For your Eyes:  " + storedValue1;
    document.getElementById("message1").textContent = greeting1;
	  }
	  if(storedValue2)
	  {
		  var greeting2 = "For your Lips:   " + storedValue2;
    document.getElementById("message2").textContent = greeting2;
	  }
	  if(storedValue2){
		  var greeting3 = "For your Skin: " + storedValue3;
    document.getElementById("message3").textContent = greeting3;
	  }
	  }
  // Step 3: Attach event listener to element
  button.addEventListener("click", onButtonClick);
  </script>
